@model WarGame.Models.PlayerViewModel

<div class="welcome">
    <div class="content">
        <div class="row">
            <div class="col-md-12">
                <h1 class="welcome-title">Bem-vindo ao Warteros</h1>
            </div>
        </div>
        <div class="row">
            <div class="col-md-4 well well-lg player-form">
                @using (Html.BeginForm("Index", "Map", FormMethod.Post, new { @class = "form-horizontal" }))
                {
                    <div class="form-group">
                        <label class="col-md-2 control-label">Nome:</label>
                        <div class="col-md-10">
                            @Html.TextBoxFor(p => p.Name, new
                        {
                            @class = "form-control",
                            @placeholder = "Digite seu primeiro nome ..."
                        })
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-2 control-label">Família:</label>
                        <div class="col-md-10">
                            @Html.DropDownListFor(p => p.Family, (IEnumerable<SelectListItem>)ViewBag.Families, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="row" style="text-align:center">
                        <div id="button">
                            <button class="btn btn-default" id="play">Jogar</button>
                        </div>
                    </div>
                }
            </div>
        </div>

    </div>
</div>